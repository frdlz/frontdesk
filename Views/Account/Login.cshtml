@model Login
@{

    Layout = "Login_Layout";
}
<div class="h-md-100 bg-indigo mt-5">
                
                <div class="text-black-50 d-md-flex align-items-center h-100 text-center justify-content-center">
                    <div class="pt-1 pb-1">
                        <img src="~/img/logo.png" width="350px" alt="Logo">
                        
                        
                    </div>
                    </div>
                    </div>
<div class="container h-100 mt-5">
    <div class="row h-100">
    <div class="col-md-6 align-self-center mx-auto">
        <div class="card h-100 border-info justify-content-center">
             <div class="card-body">
           
                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                          <label for="email">Email:</label>
                          <input type="email" class="form-control" asp-for="Email" placeholder="Enter email" name="email">
                        </div>
                        <div class="form-group">
                          <label for="pwd">Password:</label>
                          <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" name="password">
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
                </div>
        </div>
       
        </div>
        </div>
    