@model Frontdesk6.Models.Frontdesk.Appointment

@{
    ViewData["Title"] = "Edit";
}


<h4>Appointment</h4>
<hr />
<div class="alert alert-danger">
  <strong>Silahkan Pilih Nama Layanan!</strong>.
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="NoSisterkaroline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentID" />
            
            <div class="form-group">
                <label asp-for="NamaLayanan" class="control-label"></label>
                <select required asp-for="NamaLayanan" class="form-control"asp-items="ViewBag.NamaLayanan"></select>
                <span asp-validation-for="NamaLayanan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

